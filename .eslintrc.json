{
  "extends": ["next/core-web-vitals", "plugin:jest/recommended", "prettier"],
  "rules": {
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [">", "}"]
      }
    ],
    "spaced-comment": ["error", "always", { "exceptions": ["-", "*"] }],
    "react/display-name": "off",
    "jest/no-test-prefixes": "off",
    "jest/expect-expect": "off"
  },
  "plugins": ["jest"]
}
